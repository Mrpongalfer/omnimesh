# =============================================================================
# OMNIMESH ENVIRONMENT VARIABLES EXAMPLE
# Phase 4: True Intent Resonance & Proactive Orchestration  
# =============================================================================
# Copy this file to .env and customize for your environment

# Core System Settings
OMNIMESH_ENV=development
OMNIMESH_DEBUG=false
OMNIMESH_LOG_LEVEL=INFO

# API Configuration
OMNIMESH_API_HOST=localhost
OMNIMESH_API_PORT=8080
OMNIMESH_API_KEY=your-secret-api-key-here

# Database Configuration
OMNIMESH_DB_TYPE=sqlite
OMNIMESH_DB_PATH=omnimesh.db
# For PostgreSQL:
# OMNIMESH_DB_HOST=localhost
# OMNIMESH_DB_PORT=5432
# OMNIMESH_DB_NAME=omnimesh
# OMNIMESH_DB_USER=omnimesh_user
# OMNIMESH_DB_PASSWORD=your-database-password

# Security & Encryption
OMNIMESH_ENCRYPTION_KEY=your-32-byte-encryption-key-here
OMNIMESH_JWT_SECRET=your-jwt-secret-key-here
OMNIMESH_HASH_SALT=your-unique-salt-here

# Phase 4 Components
PIG_DATABASE=pig_knowledge.db
DRAP_DATABASE=drap_knowledge.db
BEHAVIOR_DATABASE=behavior_patterns.db

# Machine Learning Settings
ML_MODEL_PATH=./models/
NLTK_DATA_PATH=./nltk_data/
TF_ENABLE_GPU=false

# Mobile Integration (Termux)
TERMUX_API_ENABLED=true
MOBILE_ENCRYPTION_KEY=your-mobile-encryption-key

# External Services
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_CREDENTIALS_PATH=./credentials/google-cloud.json
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2

# Monitoring & Observability
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
JAEGER_ENABLED=false
LOG_FILE_PATH=./logs/omnimesh.log

# Performance Tuning
MAX_WORKER_THREADS=4
MEMORY_LIMIT_MB=1024
CPU_LIMIT_PERCENT=80

# Development Settings (remove in production)
ENABLE_CORS=true
ENABLE_DEBUG_ENDPOINTS=false
SKIP_AUTH_IN_DEV=false
